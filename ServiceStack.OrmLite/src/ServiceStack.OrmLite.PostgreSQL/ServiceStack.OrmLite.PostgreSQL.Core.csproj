<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>ServiceStack.OrmLite.PostgreSQL.Core</PackageId>
    <AssemblyName>ServiceStack.OrmLite.PostgreSQL</AssemblyName>
    <RootNamespace>ServiceStack.OrmLite.PostgreSQL</RootNamespace>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <Title>ServiceStack.OrmLite.PostgreSQL .NET Standard 2.0</Title>
    <PackageDescription>
      .NET Standard 2.0 version of ServiceStack.OrmLite.PostgreSQL
    </PackageDescription>
    <PackageTags>PostgreSQL;OrmLite;RDBMS;SQL;POCO;Code-First;ORM;Schema-less;Blobs</PackageTags>
    <DefineConstants>$(DefineConstants);ASYNC</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ServiceStack.OrmLite\ServiceStack.OrmLite.Core.csproj" />
    <PackageReference Include="ServiceStack.Common.Core" Version="$(Version)" />
    <PackageReference Include="Npgsql" Version="5.0.10" />
  </ItemGroup>

</Project>
