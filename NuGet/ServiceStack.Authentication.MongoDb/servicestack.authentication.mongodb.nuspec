    <iconUrl>https://servicestack.net/img/logo-32.png</iconUrl>
    <tags>ServiceStack Authentication Authorization MongoDB NoSQL POCO Code-First</tags>
    <language>en-US</language> 
    <copyright>ServiceStack 2015 and contributors</copyright>
    <dependencies>
      <dependency id="ServiceStack" version="4.0" />	
      <dependency id="mongocsharpdriver" version="1.9.2" />
    </dependencies> 
  </metadata> 
  <files>
    <file src="lib\**\*.*" target="lib" />
    <file src="..\..\src\ServiceStack.Authentication.MongoDb\**\*.cs" target="src" />
  </files>
</package>
