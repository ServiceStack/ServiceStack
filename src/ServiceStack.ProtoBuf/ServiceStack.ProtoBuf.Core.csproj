<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>ServiceStack.ProtoBuf.Core</PackageId>
    <AssemblyName>ServiceStack.ProtoBuf</AssemblyName>
    <RootNamespace>ServiceStack.ProtoBuf</RootNamespace>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Title>Protocol Buffers support for ServiceStack. Includes typed ProtoBuf Client</Title>
    <PackageDescription>
      Add the ProtoBuf binary format and endpoint to a ServiceStack web service host.
    </PackageDescription>
    <PackageTags>ProtoBuf;Fast;Binary;Serializer;Format;ContentType;REST;Web;Services;ServiceStack</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\ServiceStack.Interfaces\ServiceStack.Interfaces.Core.csproj" />
    <ProjectReference Include="..\ServiceStack.Client\ServiceStack.Client.Core.csproj" />
    <ProjectReference Include="..\ServiceStack.Common\ServiceStack.Common.Core.csproj" />
    <ProjectReference Include="..\ServiceStack\ServiceStack.Core.csproj" />
    <PackageReference Include="ServiceStack.Text.Core" Version="$(Version)" />
    <PackageReference Include="protobuf-net" Version="2.3.17" />
  </ItemGroup>
</Project>