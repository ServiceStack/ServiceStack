  </PropertyGroup>
  <ItemGroup>
    <EmbeddedResource Include="MiniProfiler\UI\*.*" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
  </ItemGroup>
