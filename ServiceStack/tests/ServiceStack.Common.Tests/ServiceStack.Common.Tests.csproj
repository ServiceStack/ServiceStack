<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net8.0</TargetFrameworks>
    <DebugType>portable</DebugType>
    <AssemblyName>ServiceStack.Common.Tests</AssemblyName>
